<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
    
<mapper namespace="com.company.app.infra.code.CodeMapper">

	<resultMap type="com.company.app.infra.code.Code" id="resultMapObj"></resultMap>
	<select id="selectList" resultMap="resultMapObj">
    	SELECT
    		seq,
    		name,
    		delNy,
    		codeGroup_seq
    	FROM
    		code
    	WHERE 1=1
			<if test="shkey != null and !shkey.equals('')">AND name LIKE CONCAT ('%',#{shkey},'%')</if>
			<if test="shOption != null and !shOption.equals('')">AND delNy = #{shOption}</if>
    </select>
    
    <select id="selectOne" resultMap="resultMapObj">
    	SELECT
    		seq,
    		name,
    		codeGroup_seq,
			delNy    		
    	FROM
    		code
    	WHERE
			seq = #{seq}
    </select>
    
    <update id="update">
    	UPDATE 
    		code
		SET 
			name = #{name},
			delNy= #{delNy}
		WHERE 
			seq = #{seq}
    	
    </update>
    
    <delete id="delete">
    	DELETE FROM 
    		code
		WHERE
			seq = #{seq}
    
    </delete>
    
    <insert id="insert">
	    insert into `code` (
			name,
			delNy
		) values (
			#{name}
			, 0
		)
    </insert>
    
    <update id="updateDel">
   		UPDATE 
    		code
		SET 
			delNy = 1
		WHERE 
			seq = #{seq}
    </update>
</mapper>